
@model BikeShop.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Delete Product Record</h3>
<h4>Are you sure you want to delete this Product Record?</h4>
<div>
    <table class="table table-bordered table-hover">
        <tr>
            <td>@Html.DisplayNameFor(p => p.ProductName):</td>
            <td>@Html.DisplayFor(p => p.ProductName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(p => p.Stock):</td>
            <td>@Html.DisplayFor(p => p.Stock)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(p => p.Price):</td>
            <td>@Html.DisplayFor(p => p.Price)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(p => p.CategoryID):</td>
            <td>@Html.DisplayFor(c => c.Category.CategoryName)</td>
        </tr>
    </table>
</div>
@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back to product's list", "Index", "Products", null, new { @class = "btn btn-primary" })
    </div>
}
